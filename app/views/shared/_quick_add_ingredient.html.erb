<form action="/create_ingredient" method="post">
  <!-- Label and input for name -->
  <div class="form-group">
    <label for="name">
      Name
    </label>

    <input type="text" id="name" name="name" class="form-control"
        value="<%= @ingredient.try(:name) %>">
  </div>

  <!-- Label and input for amount -->
  <div class="form-group">
    <label for="quantity">
      Quantity
    </label>

    <input type="text" id="quantity" name="quantity" class="form-control"
          value="<%= @ingredient.try(:quantity) %>">
  </div>

  <!-- Label and input for units -->
  <div class="form-group">
    <label for="units">
      Units
    </label>
    <datalist id="units" class="form-control">
      <input list="units" name="units">
      <option value="dash"></option>
      <option value="pinch"></option>
      <option value="tsp"></option>
      <option value="tbsp"></option>
      <option value="cup"></option>
      <option value="fl oz"></option>
      <option value="pint"></option>
      <option value="quart"></option>
      <option value="gallon"></option>
    </datalist>
    <!--<input type="text" id="units" name="units" class="form-control"-->
    <!--      value="<%= @ingredient.try(:units) %>">-->
  </div>

  <input type="hidden" id="recipe_id" name="recipe_id" class="form-control"
          value="<%= @recipe.try(:id) %>">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <button class="btn btn-block btn-outline-secondary">
    Create ingredient
  </button>
</form>
