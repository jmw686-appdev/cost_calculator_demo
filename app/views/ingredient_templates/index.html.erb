<h1>
  All ingredients
</h1>

<a href="/ingredients/new">
  Add a new ingredient
</a>

<hr>

<table class="table">
  <tr>
    <th>
      ID
    </th>

    <th>
      Name
    </th>

    <th>
      Amount
    </th>

    <th>
      Units
    </th>

    <th>
      Price
    </th>

    <th>
      Recipe
    </th>

    <th>
      Created at
    </th>

    <th>
      Updated at
    </th>

    <th>
    </th>
  </tr>

  <% @ingredients.each do |ingredient| %>
  <tr>
    <td>
      <%= ingredient.id %>
    </td>

    <td>
      <%= ingredient.name %>
    </td>

    <td>
      <%= ingredient.amount %>
    </td>

    <td>
      <%= ingredient.units %>
    </td>

    <td>
      <%= ingredient.price %>
    </td>

    <td>
      <%= ingredient.recipe_id %>
    </td>

    <td>
      <%= time_ago_in_words(ingredient.created_at) %> ago
    </td>

    <td>
      <%= time_ago_in_words(ingredient.updated_at) %> ago
    </td>

    <td>
      <a href="/ingredients/<%= ingredient.id %>">
        Show details
      </a>
    </td>
  </tr>
  <% end %>
</table>
