<!-- Validation failure messages -->
<% if @ingredient.errors.any? %>
  <% @ingredient.errors.full_messages.each do |message| %>
    <div class="alert">
      <%= message %>
    </div>
  <% end %>
<% end %>

<h1>
  Edit ingredient #<%= @ingredient.id %>
</h1>

<hr>

<form action="/update_ingredient/<%= @ingredient.id %>" method="post">
  <!-- Label and input for name -->
  <div class="form-group">
    <label for="name">
      Name
    </label>

    <input type="text" id="name" name="name" class="form-control" value="<%= @ingredient.name %>">
  </div>

  <!-- Label and input for amount -->
  <div class="form-group">
    <label for="amount">
      Amount
    </label>

    <input type="text" id="amount" name="amount" class="form-control" value="<%= @ingredient.amount %>">
  </div>

  <!-- Label and input for units -->
  <div class="form-group">
    <label for="units">
      Units
    </label>

    <input type="text" id="units" name="units" class="form-control" value="<%= @ingredient.units %>">
  </div>

  <!-- Label and input for price -->
  <% if @ingredient.recipe.shoplist %>
  <div class="form-group">
    <label for="price">
      Price
    </label>

    <input type="text" id="price" name="price" class="form-control" value="<%= @ingredient.price %>">
  </div>
  <% end %>

  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>

  <button class="btn btn-block btn-outline-secondary">
    Update ingredient
  </button>
</form>

<hr>

<%= link_to 'Go Back', recipe_path(@ingredient.recipe) %>
