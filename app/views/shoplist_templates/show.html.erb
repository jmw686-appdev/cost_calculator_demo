<h1>
  Shoplist #<%= @shoplist.id %> details
</h1>

<a href="/shoplists/<%= @shoplist.id %>/edit">
  Edit shoplist
</a>

<hr>
<%= link_to 'Calculate Unit Cost', calc_path(@shoplist.id) %>
<hr>

<dl>
  <dt>
    Name
  </dt>
  <dd>
    <%= @shoplist.name %>
  </dd>

  <dt>
    Sum
  </dt>
  <dd>
    <%= number_to_currency(@shoplist.sum) %>
  </dd>

  <dt>
    Recipe
  </dt>
  <dd>
    <%= link_to @shoplist.name, recipe_path(@shoplist.recipe_id) %>
  </dd>
  <dt>
    Ingredients
  </dt>
  <% @shoplist.items.each do |i| %>
    <dd>
      <%= link_to i.name, edit_item_path(i) %>
      | &nbsp; <%= i.amount %> &nbsp; <%= i.units %>
      | &nbsp; <%= number_to_currency(i.price) %>
    </dd>
  <% end %>
  <dt>
    Created at
  </dt>
  <dd>
    <%= time_ago_in_words(@shoplist.created_at) %> ago
  </dd>

  <dt>
    Updated at
  </dt>
  <dd>
    <%= time_ago_in_words(@shoplist.updated_at) %> ago
  </dd>
</dl>

<a href="/delete_shoplist/<%= @shoplist.id %>">
  Delete shoplist
</a>

<hr>

<a href="/shoplists">
  Go back
</a>
